{
  "name": "@yois-games/backend",
  "version": "1.0.0",
  "description": "Backend API server for the Yois Gaming platform using Fastify",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "admin:create": "tsx src/scripts/createAdmin.ts",
    "user:create": "tsx src/scripts/createAdmin.ts --test",
    "storage:init": "tsx src/scripts/initializeStorage.ts"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.1",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/websocket": "^11.0.1",
    "@prisma/client": "^6.1.0",
    "@sentry/node": "^7.86.0",
    "@sentry/profiling-node": "^1.3.2",
    "@supabase/supabase-js": "^2.57.4",
    "@upstash/redis": "^1.35.4",
    "@yois-games/game-engine": "workspace:*",
    "@yois-games/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0",
    "fastify-socket.io": "^5.1.0",
    "immer": "^10.1.1",
    "jose": "^5.9.6",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.1.0",
    "redis": "^4.7.0",
    "resend": "^4.0.0",
    "socket.io": "^4.8.1",
    "tslib": "^2.8.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wtalal7025/yois-gaming.git",
    "directory": "packages/backend"
  },
  "keywords": [
    "fastify",
    "api",
    "backend",
    "gaming",
    "yois",
    "socket.io",
    "typescript"
  ]
}