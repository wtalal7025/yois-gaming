{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Modules
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": false,
    "importHelpers": true,
    "downlevelIteration": true,

    // JavaScript Support
    "allowJs": true,
    "checkJs": false,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Language and Environment
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,

    // Projects
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    // Completeness
    "skipLibCheck": true,

    // Path Mapping for Monorepo
    "baseUrl": ".",
    "paths": {
      "@stake-games/shared": ["./packages/shared/src"],
      "@stake-games/shared/*": ["./packages/shared/src/*"],
      "@stake-games/game-engine": ["./packages/game-engine/src"],
      "@stake-games/game-engine/*": ["./packages/game-engine/src/*"],
      "@stake-games/frontend": ["./packages/frontend/src"],
      "@stake-games/frontend/*": ["./packages/frontend/src/*"],
      "@stake-games/backend": ["./packages/backend/src"],
      "@stake-games/backend/*": ["./packages/backend/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "tests/**/*",
    "**/*.config.js",
    "**/*.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/.next",
    "**/build",
    "**/coverage",
    "**/.turbo"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/game-engine"
    },
    {
      "path": "./packages/backend"
    },
    {
      "path": "./packages/frontend"
    },
    {
      "path": "./apps/web"
    }
  ]
}